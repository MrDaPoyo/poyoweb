<%- include('header.ejs') %>
<div class="row-container login-page">
    <div class="login-container">
        <h2>Login</h2>
        <form action="/auth/login" method="POST">
            <div class="form-group">
                <input type="text" id="usern" name="user" placeholder="Email/Username" required>
            </div>
            <div class="form-group">
                <input type="password" id="password" name="password" placeholder="Password" required>
            </div>
            <button type="submit">Login</button>
            <a href="/auth/recover">Forgot your password?</a>
        </form>
        <h2>Register</h2>
    <form action="/auth/register" method="POST">
        <div class="form-group">
            <input type="text" id="username" name="username" placeholder="Username" required><span class="mandatory">*</span>
        </div>
        <div class="form-group">
            <input type="email" id="email" name="email" placeholder="Email" required><span class="mandatory">*</span>
        </div>
        <div class="form-group">
            <input type="password" id="password" name="password" placeholder="Password" required><span class="mandatory">*</span>
        </div>
        <div class="form-group">
            <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm password"  required><span class="mandatory">*</span>
        </div>
        <button type="submit">Register</button>
    </form>
    <span class="mandatory">* => Obligatory</span>
    </div>
    <div class="login-container login-carl">
    	<a class="hidden-link">
			<img src="/carl/carl-minecraft.png">
		</a>
		<h3>The beggining of a new adventure</h3>    	
    </div>
    </div>
